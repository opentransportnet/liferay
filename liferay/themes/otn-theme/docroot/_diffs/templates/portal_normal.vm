<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>$the_title - $company_name</title>
    <script src="/wwwlibs/hslayers/HS.js" type="text/javascript"></script>

    <script type="text/javascript">
        var getLRlang = function() {
            return "$themeDisplay.getLocale().getLanguage()";
        }

        var isPOI = function () {
        #set ( $usrPoi = false )
        #if ($is_signed_in)
            #set ( $usrRoles = $user.getRoles())
            #foreach ( $usrRole in $usrRoles )
                #if ( $usrRole.getName() == "poi" )
                    #set ( $usrPoi = true )
                #end
            #end
        #end
        return $usrPoi
        }

        var getLRUser = function() {
        #if ($is_signed_in)
        return "$user.getScreenName()";
        #else
        return "guest";
        #end
        }
    </script>

    #set ($widthtype = $theme.getSetting("content-full-width"))
    #set ($footer = $theme.getSetting("footer"))

    $theme.include($top_head_include)

    <link rel="stylesheet" media="screen,projection" type="text/css" href="/wwwlibs/ext/resources/css/ext-all.css"></link>
    <link rel="stylesheet" media="screen,projection" type="text/css" href="/wwwlibs/ext/resources/css/xtheme-gray.css"></link>
    <script src="$javascript_folder/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    <script src="$javascript_folder/iframefull.js"></script>
</head>

<body class="$css_class">
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

    <!-- This code is taken from http://twitter.github.com/bootstrap/examples/hero.html -->

$theme.include($body_top_include)

#if ($is_signed_in)
    #dockbar()
#end

    #if ($widthtype)
    <div class="navbar no-border navbar-inverse navbar-fixed-top">
    #else
    <div class="navbar navbar-inverse navbar-fixed-top">
    #end
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="$site_default_url">$site_name</a>
                #if ($has_navigation || $is_signed_in)
                    #parse ("$full_templates_path/navigation.vm")
                #end
            </div>
        </div>
    </div>

    #if ($widthtype == true)
    <div class="container no-border">
    #else
    <div class="container">
    #end

        #if ($selectable)
            $theme.include($content_include)
        #else
            $portletDisplay.recycle()

            $portletDisplay.setTitle($the_title)

            $theme.wrapPortlet("portlet.vm", $content_include)
        #end

    #if ($footer == true)
        <footer id="footer" role="contentinfo">
        <hr>
        <p class="eu"> <img src="$images_folder/eu-flag.png" alt=""> This project has received funding from the European Union's Competitiveness and Innovation Framework Programme under grant agreement no. 620533 </p>
        </footer>
    #end
    </div> <!-- /container -->

$theme.include($body_bottom_include)

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="$javascript_folder/vendor/jquery-1.10.2.min.js"><\/script>')</script>

    <script src="$javascript_folder/vendor/bootstrap.min.js"></script>
